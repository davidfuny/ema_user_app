<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sky_rect"
                android:layout_marginTop="@dimen/dp_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_50">

                    <customfonts.MyTextViewMedium
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textAllCaps="true"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/dp_20"
                        android:text="Agent Login"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:orientation="vertical">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter email"
                                android:textSize="@dimen/dp_16"
                                android:maxLength="100"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:singleLine="true"
                                app:met_floatingLabel="highlight"
                                app:met_floatingLabelText="Mobile Number"
                                app:met_textColor="@color/white"
                                app:met_textColorHint="@color/white"
                                app:met_underlineColor="@color/white"
                                app:met_baseColor="@color/white"
                                app:met_primaryColor="@color/white"
                                app:met_iconPadding="0dp"
                                app:met_errorColor="@color/red"
                                app:met_iconRight="@drawable/mail"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:orientation="vertical">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="16"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:hint="Enter password"
                                android:inputType="textPassword"
                                android:textSize="@dimen/dp_16"
                                app:met_floatingLabel="highlight"
                                app:met_floatingLabelText="Password"
                                app:met_textColor="@color/white"
                                app:met_textColorHint="@color/white"
                                app:met_underlineColor="@color/white"
                                app:met_baseColor="@color/white"
                                app:met_primaryColor="@color/white"
                                app:met_iconPadding="0dp"
                                app:met_errorColor="@color/red"
                                app:met_iconRight="@drawable/lock"/>

                        </LinearLayout>


                    </LinearLayout>
                    <customfonts.MyTextViewMedium
                        android:id="@+id/btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_button_green"
                        android:paddingLeft="@dimen/dp_40"
                        android:paddingRight="@dimen/dp_40"
                        android:textSize="@dimen/dp_18"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="Login"/>

                    <customfonts.MyTextViewMedium
                        android:id="@+id/close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/dp_18"
                        android:padding="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:textColor="@color/white"
                        android:text="Close"/>

                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:src="@drawable/login_alert"
                app:civ_border_color="#1ab2e8"
                app:civ_border_width="@dimen/dp_5"
                android:layout_gravity="center_horizontal"/>

        </FrameLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>